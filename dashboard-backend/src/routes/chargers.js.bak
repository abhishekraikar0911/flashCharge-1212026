const express = require("express");
const router = express.Router();
const { client, webClient } = require("../services/steveClient");

router.get("/", async (req, res) => {
  try {
    const response = await client.get("/api/v1/chargeboxes");
    res.json(response.data);
  } catch (err) {
    console.error("Chargeboxes error:", err.message);
    res.status(500).json({ error: "Failed to fetch chargeboxes" });
  }
});


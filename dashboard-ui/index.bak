<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"
  />
  <title>Welcome to flashCharge</title>

  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Orbitron:wght@500;700&display=swap"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="style.css" />
</head>

<body>
  <div class="container">
    <header class="header">
      <h1 class="title">Welcome to flashCharge</h1>
    </header>

    <main>
      <div class="status-container">
        <div class="status-item">
          <span class="status-label">Status:</span>
          <span id="status" class="status-value">Unknown</span>
        </div>

        <div class="status-item">
          <span class="status-label">SOC:</span>
          <span id="soc" class="status-value">-- %</span>
        </div>

        <div class="status-item">
          <span class="status-label">Current:</span>
          <span id="current" class="status-value">-- A</span>
        </div>
      </div>

      <div class="button-container">
        <button id="start-btn" class="btn-main">Start Charging</button>
        <button id="stop-btn" class="btn-main btn-danger">Stop Charging</button>
      </div>
    </main>
  </div>

  <script type="module" src="js/app.js"></script>
</body>
</html>

